<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>

  <body>
    <%- include('../partials/header.ejs') %>

    <main>
      <h1>Hello world</h1>
      <a href="/create">Create new User</a>
      <form method="GET" action="/">
        <input type="text" name="category" placeholder="Search by category" />
        <button type="submit">Search</button>
      </form>
      <% expenses.forEach(e=> { %>
      <div class="userCard">
        <h2>Category: <%= e.category %></h2>
        <h2>Price: <%= e.price %></h2>
        <a href="/expenses/<%= e.id %>"> Show details </a>
        <a href="/expenses/<%= e.id %>/details"> update </a>
        <form action="/api/expenses/<%= e.id %>/delete" method="get">
          <button>Delete</button>
        </form>
      </div>
      <% }) %>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
